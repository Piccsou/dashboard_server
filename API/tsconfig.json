{
    "compilerOptions": {
        "target": "ESNext",
        "allowJs": true,
        "skipLibCheck": true,
        "allowUnreachableCode": false,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "outDir": "dist",
        "incremental": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
    },
    "exclude": [
        "node_modules",
        "API.logs",
        "test.js"
    ],
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ]
}